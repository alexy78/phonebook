<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: contact, local: true) do |form| %>
        <div class="form-outline mb-4">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, id: 'form8Example1', class: 'form-control' %>
        </div>

        <div class="form-outline mb-4">
          <%= form.label :email, class: 'form-label' %>
          <%= form.text_field :email, id: 'form8Example2', class: 'form-control' %>
        </div>

        <div class="form-outline mb-4">
          <%= form.label :phone, class: 'form-label' %>
          <%= form.text_field :phone, id: 'form8Example3', class: 'form-control' %>
        </div>

        <%= form.submit class: 'btn btn-dark mt-3' %>
      <% end %>
      <%= link_to 'Back', contacts_path, class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>