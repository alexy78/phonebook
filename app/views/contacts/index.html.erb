<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each_with_index do |contact, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td>
          <%= link_to 'Show', contact, class: 'btn btn-dark' %> |
          <%= link_to 'Edit', edit_contact_path(contact), class: 'btn btn-dark' %> |
          <%= link_to 'Delete', contact_path(contact), data: { turbo_method: :delete }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center mt-3">
  <%= link_to 'New Contact', new_contact_path, class: 'btn btn-dark' %>
</div>